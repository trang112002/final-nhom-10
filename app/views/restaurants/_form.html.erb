<%= form_with(model: restaurant) do |form| %>
<% if restaurant.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% restaurant.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :hotline, class: label_class %>
          <%= form.text_area :hotline, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :address, class: label_class %>
          <%= form.text_field :address, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :rating, class: label_class %>
          <%= form.text_field :rating, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if restaurant.persisted? %>
<%= link_to "Cancel", restaurant, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", restaurants_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
